<!doctype html>
<html lang="zh">
<head>
    <%- include('layouts/head.ejs') %>
    <title>编程与写作</title>
</head>
<body>
<!-- header -->
<%- include('layouts/header.ejs') %>
<!--main-->
<main class="container archives">
    <% for (let group of articleGroup){ %>
        <h3 class="title"><%= group.year %></h3>
        <ul class="articles-list">
            <% for (let article of group.articles){ %>
                <li>
                    <time><%= article.postDate %></time>
                    -
                    <a class="link-primary"
                       href="/article/<%= article.id %>?category=<%= article.category %>"><%= article.title %></a>
                </li>
            <% } %>
        </ul>
    <% } %>
</main>
<!-- footer -->
<%- include('layouts/footer.ejs') %>
</body>
</html>