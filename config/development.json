{
  "log4js": {
    "appenders": {
      "console": {
        "type": "stdout"
      },
      "access": {
        "type": "dateFile",
        "filename": "log/access.log",
        "pattern": "-yyyy-MM-dd",
        "layout": {
          "type": "messagePassThrough"
        }
      },
      "error": {
        "type": "dateFile",
        "filename": "log/error.log",
        "pattern": "-yyyy-MM-dd"
      }
    },
    "categories": {
      "default": {
        "appenders": [
          "console"
        ],
        "level": "debug"
      },
      "access": {
        "appenders": [
          "console",
          "access"
        ],
        "level": "debug"
      },
      "error": {
        "appenders": [
          "console",
          "error"
        ],
        "level": "error"
      }
    }
  },
  "mysql": {
    "connectionLimit": 20,
    "host": "127.0.0.1",
    "user": "root",
    "password": "123456",
    "database": "blog"
  }
}